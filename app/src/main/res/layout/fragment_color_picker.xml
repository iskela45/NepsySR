<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvColorPickerHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Valitse v채ri profiilille"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgColors"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvColorPickerHeader">

        <RadioButton
            android:id="@+id/rbRed"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:text="Punainen" />

        <RadioButton
            android:id="@+id/rbOragne"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#ff8000"
            android:text="Oranssi" />

        <RadioButton
            android:id="@+id/rbYellow"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#ffff00"
            android:text="Keltainen" />

        <RadioButton
            android:id="@+id/rbGreen"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#00ff00"
            android:text="Vihre채" />

        <RadioButton
            android:id="@+id/rbLightGreen"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#00ff80"
            android:text="Vaalean vihre채" />

        <RadioButton
            android:id="@+id/rbCyan"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#00ffff"
            android:text="Syaani" />

        <RadioButton
            android:id="@+id/rbBlue"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#0000ff"
            android:text="Sininen" />


        <RadioButton
            android:id="@+id/rbPurple"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#8000ff"
            android:text="Purppura" />

        <RadioButton
            android:id="@+id/rbViolet"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#ff00ff"
            android:text="Violetti" />

        <RadioButton
            android:id="@+id/rbMagenta"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#ff0080"
            android:text="Magenta" />

    </RadioGroup>

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:text="Hyv채ksy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rgColors" />

</androidx.constraintlayout.widget.ConstraintLayout>